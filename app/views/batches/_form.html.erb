  <div class="field">
    <%= f.label :due_date %><br />
    <%= f.date_select :due_date %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :order_date %><br />
    <%= f.date_select :order_date %>
  </div>
  <div class="field">
    <%= f.label :arrival_date %><br />
    <%= f.date_select :arrival_date %>
  </div>


    <div>
      <%= f.fields_for :product do |prod_form| %>

          <%= prod_form.fields_for :quantity do |qty_form|%>
              <% Product.all.each do |prod| %>

                  <%= check_box_tag :product_ids, prod.id, @batch.products.include?(prod), :name => 'batch[product_ids][]' %>
